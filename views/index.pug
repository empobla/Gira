        form.cta-form#js-cta-form
            .grid--2
                input.cta-form__input(type='text' name='first_name' placeholder='Nombre' required)
                input.cta-form__input(type='text' name='last_name' placeholder='Apellido' required)
            input.cta-form__input(type='email' name='email' placeholder='Correo' required)
            input.cta-form__input(type='text' name='phone_number' placeholder='Télefono')
            .grid--2
                input.cta-form__input(type='number' name='age' min='0' max='150' placeholder='Edad')
                select.cta-form__select(name='gender' required)
                    option(value='-1' selected) Sexo
                    option(value='male') Hombre
                    option(value='female') Mujer
            input.cta-form__input(type='text' name='institution' placeholder='Universidad, Trabajo o Institución')
